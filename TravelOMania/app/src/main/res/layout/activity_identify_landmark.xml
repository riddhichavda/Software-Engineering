<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/frameLayout"
    tools:context="group7.travelomania.identify_landmark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center">

    <TableLayout
        tools:context="group7.travelomania.identify_landmark"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="#ffffcc" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identify any of the following landmarks"
                android:id="@+id/textView"
                android:layout_span="2"
                android:textAlignment="center"
                android:textColor="#0000ff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView_landmark0"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView_landmark1"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView_landmark2"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView_landmark3"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView_landmark4"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageView_landmark5"
                android:src="@drawable/bulb_on"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:minHeight="160dp"
                android:minWidth="160dp"
                android:maxHeight="160dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY" />
        </TableRow>
    </TableLayout>
</FrameLayout>
