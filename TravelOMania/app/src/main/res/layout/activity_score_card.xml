<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group7.travelomania.ScoreCardActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_button_text"
        android:id="@+id/help_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView

        android:id="@+id/imageView_avatar"
        android:src="@drawable/avatar_na"
        android:contentDescription="@string/imageView_Avatar_Description"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart level"
        android:id="@+id/restart_level"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  next  level  "

        android:id="@+id/next_level"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/restart_level"
        android:layout_alignParentBottom="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/good_job"
        />

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/scoretemplate"
        android:layout_above="@+id/restart_level"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score card"
        android:textSize="40dp"
        android:textAllCaps="true"
        android:textColor="#00ff77"
        android:textStyle="bold"
        android:id="@+id/score_card"
        android:layout_below="@+id/imageView_avatar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Good Job!"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#ff0000"
        android:textStyle="bold"

        android:id="@+id/good_job"
        android:layout_below="@+id/score_card"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"

        android:text="score"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#4466ff"
        android:textStyle="bold"
        android:id="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_marginLeft="50dp"
        android:text="50"

        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="#4466ff"
        android:textStyle="bold"
        android:id="@+id/score_value"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hints"
        android:id="@+id/hints"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#4466ff"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@id/score"
        android:layout_margin="@dimen/activity_vertical_margin"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#4466ff"
        android:textStyle="bold"
        android:id="@+id/number_of_hints"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/hints"
        android:layout_alignRight="@id/score_value"
        android:layout_marginRight="50dp"
        />






    />

</RelativeLayout>