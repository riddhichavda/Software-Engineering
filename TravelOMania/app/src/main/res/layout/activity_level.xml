<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group7.travelomania.LevelActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="\?"
        android:id="@+id/btn_help"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView_avatar"
        android:src="@drawable/basic_avatar"
        android:layout_alignRight="@id/btn_help"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="20dp"
        android:text="Level 1"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"

        android:id="@+id/level_name"
        android:layout_below="@+id/btn_help"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="1/7"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/level_number"
        android:layout_below="@+id/imageView_avatar"
        android:layout_alignParentRight="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_below="@+id/level_number"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="20dp"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorHighlight="#777700"
        android:textColor="#ff0000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:text="What is the capital of U.S.A.?"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"

        android:id="@+id/game_question"
        android:layout_below="@+id/level_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Washington DC"
        android:id="@+id/option1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/game_question"
        />


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="New York city"
        android:id="@+id/option2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/option1" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Los Angeles"
        android:id="@+id/option3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/option2" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Ottawa"
        android:id="@+id/option4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/option3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  next  level  "
        android:id="@+id/next_level"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/option4" />


</RelativeLayout>
